<?xml version="1.0" encoding="utf-8"?>
<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx/4.0" Version="4.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://docs.oasis-open.org/odata/ns/edmx/4.0 ../schemas/edmx.xsd"
>
  <edmx:Reference Url="http://tinyurl.com/Org-OData-Measures-V1" />
  <edmx:DataServices DataServiceVersion="4.0">
    <Schema xmlns="http://docs.oasis-open.org/odata/ns/csdl/4.0" Alias="Self"
      Namespace="Org.OData.Core.V1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://docs.oasis-open.org/odata/ns/csdl/4.0 ../schemas/csdl.xsd"
    >
      <Documentation>
        <Summary>Core terms needed to write vocabularies</Summary>
      </Documentation>

      <TypeDefinition Name="Tag" UnderlyingType="Edm.Boolean">
        <Documentation>
          <Summary>
            This is the type to use for all tagging terms
          </Summary>
        </Documentation>
      </TypeDefinition>

      <Term Name="RequiresType" Type="Edm.String" AppliesTo="Term">
        <Documentation>
          <Summary>
            Properties and value terms annotated with this annotation MUST have a
            type that is identical to or derived from the given type name.
          </Summary>
        </Documentation>
      </Term>

      <!-- Value restrictions for terms -->
      <Term Name="IsURI" Type="Core.Tag" DefaultValue="true" AppliesTo="Property,Term">
        <Documentation>
          <Summary>
            Properties and value terms annotated with this term MUST contain
            a valid
            URI
          </Summary>
        </Documentation>
        <Annotation Term="Core.RequiresType" String="Edm.String" />
      </Term>

      <Term Name="IsMediaType" Type="Core.Tag" DefaultValue="true" AppliesTo="Property,Term">
        <Documentation>
          <Summary>
            Properties and value terms annotated with this term MUST contain
            a valid MIME type
          </Summary>
        </Documentation>
        <Annotation Term="Core.RequiresType" String="Edm.String" />
      </Term>

      <Term Name="IsLanguageDependent" Type="Core.Tag" DefaultValue="true" AppliesTo="Property,Term">
        <Documentation>
          <Summary>
            Properties and value terms annotated with this term are
            language-dependent
          </Summary>
        </Documentation>
        <Annotation Term="Core.RequiresType" String="Edm.String" />
      </Term>

      <!-- TODO: include Andrew's XML terms here -->

      <!-- TODO: Term for "is type annotation" -->
      <Term Name="SameAs" Type="Core.Tag" DefaultValue="true" AppliesTo="Term">
        <Documentation>
          <Summary>
            Terms annotated with this term convey that the annotation target is "the same as" the term it is annotated with.
            Example: annotate Employee with Org.Schema.Person
          </Summary>
        </Documentation>
      </Term>

    </Schema>
  </edmx:DataServices>
</edmx:Edmx>