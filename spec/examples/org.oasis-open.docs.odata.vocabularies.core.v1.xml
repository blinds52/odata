<?xml version="1.0" encoding="utf-8"?>
<Schema xmlns="http://docs.oasis-open.org/odata/ns/csdl/4.0" Alias="Self"
  Namespace="OData.vocabularies.core.v1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://docs.oasis-open.org/odata/ns/csdl/4.0 ..\schemas\csdl.xsd"
>
  <Documentation>
    <Summary>Core terms needed to write vocabularies</Summary>
  </Documentation>

  <!-- Applicability of terms -->
  <ValueTerm Name="AppliesToAssociationSet" Type="Edm.Boolean" DefaultValue="true">
    <Documentation>
      <Summary>Terms annotated with this annotation can be applied to AssociationSet
        elements
      </Summary>
    </Documentation>
  </ValueTerm>

  <ValueTerm Name="AppliesToEntitySet" Type="Edm.Boolean" DefaultValue="true">
    <Documentation>
      <Summary>Terms annotated with this annotation can be applied to EntitySet
        elements
      </Summary>
    </Documentation>
  </ValueTerm>

  <ValueTerm Name="AppliesToProperty" Type="Edm.Boolean" DefaultValue="true">
    <Documentation>
      <Summary>Terms annotated with this annotation can be applied to Property
        elements
      </Summary>
    </Documentation>
  </ValueTerm>

  <ValueTerm Name="AppliesToValueTerm" Type="Edm.Boolean" DefaultValue="true">
    <Documentation>
      <Summary>Terms annotated with this annotation can be applied to ValueTerm
        elements
      </Summary>
    </Documentation>
  </ValueTerm>

  <ValueTerm Name="RequiresType" Type="Edm.String" DefaultValue="true">
    <Documentation>
      <Summary>Properties and value terms annotated with this annotation MUST
        have a type
        that is
        identical to or derived from the given type name.
      </Summary>
    </Documentation>
    <ValueAnnotation Term="Core.AppliesToProperty" />
    <ValueAnnotation Term="Core.AppliesToValueTerm" />
  </ValueTerm>

  <!-- Value restrictions for terms -->
  <ValueTerm Name="IsPropertyName" Type="Edm.Boolean" DefaultValue="true">
    <Documentation>
      <Summary>Properties and value terms annotated with this term MUST contain
        a property
        path that leads to a property in scope of the annotation
      </Summary>
    </Documentation>
    <ValueAnnotation Term="Core.AppliesToProperty" />
    <ValueAnnotation Term="Core.AppliesToValueTerm" />
    <ValueAnnotation Term="Core.RequiresType" String="Edm.String" />
  </ValueTerm>

  <ValueTerm Name="IsURI" Type="Edm.Boolean" DefaultValue="true">
    <Documentation>
      <Summary>Properties and value terms annotated with this term MUST contain
        a valid URI
      </Summary>
    </Documentation>
    <ValueAnnotation Term="Core.AppliesToProperty" />
    <ValueAnnotation Term="Core.AppliesToValueTerm" />
    <ValueAnnotation Term="Core.RequiresType" String="Edm.String" />
  </ValueTerm>
</Schema>
